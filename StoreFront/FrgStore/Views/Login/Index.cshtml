@{
    Layout = "LoginShared/_LayoutLogin";
}

<br>
<br>
<center>
<h3>Login</h3>
</center>


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <div class="container">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="alert alert-danger" role="alert" id="alertaLogin" style="display:none">
                                Usuario ou Senha Vazios !
                            </div>
                            <div class="alert alert-danger" role="alert" id="alertaLoginIncorreto" style="display:none">
                               Usuario ou Senha Incorretos ! 
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="email">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="email">Senha</label>
                                <input type="password" class="form-control" id="password" placeholder="Password">
                            </div>
                            <br /> 
                            <center>
                                <div class="form-group">
                                    <button class="btn btn-success" onclick="Validate()">Entrar</button>
                                    <a class="btn btn-primary" asp-controller="Login" asp-action="Cadastro">Cadastrar</a>
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/js/Login.js"></script>