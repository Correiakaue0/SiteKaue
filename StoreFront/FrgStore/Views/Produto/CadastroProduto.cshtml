<br></br>

<center>
    <h1>Cadastrar Produto</h1>
</center>

<div class="container">
    <a class="btn btn-danger mb-2" asp-controller="Home" asp-action="Carrossel">Voltar</a>

    <div class="alert" role="alert" id="alertaMsg" style="display:none;">
    </div>

    <div class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Nome </label>
        <input type="text" class="form-control" id="nomeProduto" placeholder="Nome do produto ...">
      </div>
      <div class="col-md-6">
        <label class="form-label">Descrição</label>
        <input type="text" class="form-control" id="descricao" placeholder="Decrição do produto ...">
      </div>
      <div class="col-6">
        <label class="form-label">Valor</label>
        <input type="number" class="form-control" id="valor" placeholder="R$ 0,0">
      </div>
       <div class="col-6">
        <label for="inputAddress" class="form-label">Categoria</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="Ex: Tenis,Camiseta...">
      </div>
      <div class="col-12">
        <label class="form-label">Imagem</label>
        <input type="text" class="form-control" id="imagem">
      </div> 
      <div class="col-6">
           <button type="submit" onclick="cadastrarProduto()" class="btn btn-success">Finalizar Cadastro</button>
      </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/js/cadastro-produto.js"></script>
